    import pickle
    import numpy as np
    from flask import Flask, request, render_template_string

    # Load the pipeline
    with open(r'C:\Users\user2\Desktop\fraud_detection.py\fraud_detection_pipeline.pkl', 'rb') as f:
        pipeline = pickle.load(f)

    app = Flask(__name__)

    # Simple HTML form
    HTML = """
    <form method="post">
      Amount: <input name="amount"><br>
      Old Balance Orig: <input name="oldbalanceOrg"><br>
      New Balance Orig: <input name="newbalanceOrig"><br>
      Name Dest: <input name="nameDest"><br>
      Old Balance Dest: <input name="oldbalanceDest"><br>
      New Balance Dest: <input name="newbalanceDest"><br>
      <input type="submit">
    </form>
    {% if prediction is not none %}
      <h2>Prediction: {{ prediction }}</h2>
    {% endif %}
    """

    @app.route('/', methods=['GET', 'POST'])
    def predict():
        prediction = None
        if request.method == 'POST':
            # Collect input values
            features = [
                float(request.form['amount']),
                float(request.form['oldbalanceOrg']),
                float(request.form['newbalanceOrig']),
                request.form['nameDest'],
                float(request.form['oldbalanceDest']),
                float(request.form['newbalanceDest'])
            ]
            # The input must match the order and type expected by your pipeline
            X = [features]
            prediction = pipeline.predict(X)[0]
        return render_template_string(HTML, prediction=prediction)

    if __name__ == '__main__':
        app.run(debug=True)|




